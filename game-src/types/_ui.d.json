[
  {
    "name": "Element",
    "typeName": "ui.Element",
    "baseclass": "",
    "desc": "UI基类，提供基础UI属性，数据绑定， 布局计算",
    "properties": [
      {
        "name": "x",
        "type": "number|string|Dimension",
        "comment": "基于anchor点的x位置，当left和right都未设置时由x确定控件位置",
        "validate": "dimension"
      },
      {
        "name": "y",
        "type": "number|string|Dimension",
        "comment": "基于anchor点的y位置",
        "validate": "dimension"
      },
      {
        "name": "left",
        "type": "number|string|Dimension",
        "comment": "左边位置，set可以是number,string,Dimension类型，get时为Dimension类型，下同",
        "validate": "dimension"
      },
      {
        "name": "top",
        "type": "number|string|Dimension",
        "comment": "上边位置",
        "validate": "dimension"
      },
      {
        "name": "right",
        "type": "number|string|Dimension",
        "comment": "右边位置。设置右边位置属性使得控件的右边自动跟随父控件的右边对齐",
        "validate": "dimension"
      },
      {
        "name": "bottom",
        "type": "number|string|Dimension",
        "comment": "底边位置。设置底边位置属性使得控件的底边自动跟随父控件的底边对齐",
        "validate": "dimension"
      },
      {
        "name": "width",
        "type": "number|string|Dimension",
        "comment": "宽度",
        "validate": "dimension"
      },
      {
        "name": "height",
        "type": "number|string|Dimension",
        "comment": "高度",
        "validate": "dimension"
      },
      {
        "name": "opacity",
        "type": "number",
        "comment": "透明度，0~1",
        "default": 1,
        "validate": "opacity"
      },
      {
        "name": "visible",
        "type": "boolean",
        "comment": "可见性",
        "default": true
      },
      {
        "name": "scaleX",
        "type": "number",
        "comment": "水平缩放倍率\nremark: 缩放和旋转仅改变UI元素的显示，但不会影响到UI的边界和布局",
        "default": 1,
        "validate": "scale"
      },
      {
        "name": "scaleY",
        "type": "number",
        "comment": "垂直缩放倍率",
        "default": 1,
        "validate": "scale"
      },
      {
        "name": "scale",
        "type": "number",
        "comment": "缩放倍率",
        "default": 1,
        "validate": "scale"
      },
      {
        "name": "angle",
        "type": "number",
        "comment": "旋转角度",
        "default": 0,
        "validate": "angle"
      },
      {
        "name": "anchorX",
        "type": "number",
        "comment": "控件中心点水平位置，0~1",
        "default": 0.5,
        "validate": "float"
      },
      {
        "name": "anchorY",
        "type": "number",
        "comment": "控件中心点垂直位置，0~1",
        "default": 0.5,
        "validate": "float"
      },
      {
        "name": "zIndex",
        "type": "number",
        "comment": "z排序值",
        "default": 0,
        "validate": "int"
      },
      {
        "name": "touchable",
        "type": "boolean",
        "comment": "是否可触控，若设置为不可触控则点击判断会穿过该控件",
        "default": true
      }
    ]
  },
  {
    "name": "Container",
    "typeName": "ui.Container",
    "baseclass": "Element",
    "desc": "UI容器基类，从Container继承的类中可以包含子元素",
    "properties": [
      {
        "name": "culling",
        "type": "boolean",
        "comment": "是否在渲染前预先剔除超出边界范围的物体，默认为false",
        "default": false
      },
      {
        "name": "clip",
        "type": "boolean",
        "comment": "是否显示超出边界的子元素，默认为false",
        "default": false
      },
      {
        "name": "drawCache",
        "type": "boolean",
        "comment": "是否在渲染前预先剔除超出边界范围的物体，默认为false",
        "default": false
      },
      {
        "name": "batchMode",
        "type": "boolean",
        "comment": "跨stage的自动合批模式，打开改选项可以将该容器下的所有子元素按照渲染状态进行重新排序，以尽可能有利于合批提高渲染性能（但也可能造成前后次序错误，谨慎使用）",
        "default": false
      },
      {
        "name": "ownerBuffer",
        "type": "boolean",
        "comment": "是否自带显示缓冲区，默认为false",
        "default": false
      },
      {
        "name": "textStyle",
        "type": "string",
        "comment": "文本样式，（Label子控件会逐级向父容器请求文本样式）",
        "validate": "textStyle"
      }
    ]
  },
  {
    "name": "Group",
    "typeName": "ui.Group",
    "baseclass": "Container",
    "desc": "简单的UI容器类，用于包含多个子元素",
    "hasChildElements": true,
    "properties": []
  },
  {
    "name": "Control",
    "typeName": "ui.Control",
    "baseclass": "Container",
    "desc": "控件基类，控件可以接收和处理触摸事件，控件类可以定义状态表",
    "properties": [
      {
        "name": "state",
        "type": "string",
        "comment": "当前状态",
        "default": null
      },
      {
        "name": "hittable",
        "type": "boolean",
        "comment": "当Control设置为hittable时，Control区域内默认都可被点中，否则将调用Control内子元素的hitTest方法"
      }
    ]
  },
  {
    "name": "ScrollView",
    "typeName": "ui.ScrollView",
    "baseclass": "Control",
    "desc": "可滚动的视图容器，支持子元素在视图里的滚动显示",
    "hasChildElements": true,
    "properties": [
      {
        "name": "xScroll",
        "type": "number",
        "comment": "水平滚动位置",
        "default": 0,
        "validate": "float"
      },
      {
        "name": "yScroll",
        "type": "number",
        "comment": "垂直滚动位置",
        "default": 0,
        "validate": "float"
      },
      {
        "name": "scrollWidth",
        "type": "number",
        "comment": "水平滚动范围",
        "default": 0,
        "validate": "float"
      },
      {
        "name": "scrollHeight",
        "type": "number",
        "comment": "垂直滚动范围",
        "default": 0,
        "validate": "float"
      },
      {
        "name": "scrollMode",
        "type": "ScrollMode",
        "comment": "滚动方向",
        "default": 3
      }
    ]
  },
  {
    "name": "ScaleScrollView",
    "typeName": "ui.ScaleScrollView",
    "baseclass": "ScrollView",
    "desc": "带缩放的卷动视图容器",
    "hasChildElements": true,
    "properties": [
      {
        "name": "scaleRange",
        "type": "Number2",
        "comment": "scaleRange",
        "default": [
          1,
          2
        ],
        "validate": "int2"
      },
      {
        "name": "scaleRamp",
        "type": "number",
        "comment": "scaleRamp",
        "default": 0.1,
        "validate": "float"
      }
    ]
  },
  {
    "name": "ListView",
    "typeName": "ui.ListView",
    "baseclass": "Container",
    "desc": "列表视图，用于在视图内放置一组item元素，item的排列支持横向、纵向、换行三种排列方式",
    "properties": [
      {
        "name": "itemClass",
        "type": "string",
        "comment": "item元素的UI类，列表根据指定的UI类来创建item所对应的UI子元素",
        "default": ""
      },
      {
        "name": "layoutMode",
        "type": "LayoutMode",
        "comment": "布局模式",
        "default": 1
      },
      {
        "name": "itemPadding",
        "type": "Number4",
        "comment": "item之间的间距",
        "validate": "int4"
      },
      {
        "name": "item",
        "type": "Object",
        "comment": "item属性设置（设置一组属性值，用于初始化item元素的属性）"
      }
    ]
  },
  {
    "name": "StackView",
    "typeName": "ui.StackView",
    "baseclass": "Container",
    "desc": "用于包含多个标签页显示的视图",
    "hasChildElements": true,
    "properties": [
      {
        "name": "activePage",
        "type": "number",
        "comment": "当前显示页面的index",
        "default": 0,
        "validate": "int"
      }
    ]
  },
